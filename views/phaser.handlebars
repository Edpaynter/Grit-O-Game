<script src="/js/phaserTest.js"></script>



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Game Over</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="score">

                </div>
                <form>
                    <div id="enterName" class="form-group">
                        <input type="test" class="form-control" id="user" placeholder="Enter Name">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button id="scores" type="button" class="btn btn-secondary" data-dismiss="modal">Add Score</button>
                <button id="playAgain" type="button" class="btn btn-primary">Play Again</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="scoreModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="scoreModalLabel">Top Scores</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Score</th>
                                {{!-- <th scope="col">Time</th> --}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each highscore }}
                            <tr>
                            <td>
                                {{this.id}}
                            </td>
                            <td>
                                {{this.name}}
                            </td>
                            <td>
                                {{this.score}}
                            </td>
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>
                    <button id="playAgainScores" type="button" class="btn btn-primary">Play Again</button>
                    <a href="/"><button id="mainMenu" type="button" class="btn btn-primary">Main Menu</button></a>
                </div>
            </div>

        </div>
    </div>

</div>


<script>
    $("#playAgain").click(function () {
        location.reload()
    });

    $("#playAgainScores").click(function () {
        location.reload()
    });

    $("#scores").click(function () {
        var userData = {
            name: $("#user").val(),
            score: $("#score").text(),
        }

        console.log(userData);

        var currentURL = window.location.origin;
        $.post(currentURL + "/api/highscores", userData, function (data) {
            $("#name").text(data.name);
            $("#score").text(data.score);
        });
        $("#scoreModal").modal("show")

    })

   

</script>