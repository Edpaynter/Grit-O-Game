<div id="home">
  <div id="background-container"></div>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="row" id="title-row">
          <div class="w3-container w3-center w3-animate-zoom">
            <img src="/assets/images/gritto.png" alt="gritto-title">
          </div>
        </div>
        <div class="row" id="playgame-row">
          <a href="/phaser"><img src="/assets/images/playgame.png"></a>
        </div>
        <h1>Current Leaderboard:</h1>
        <div class="row" id="highscores-row">
          <ul id="highscore-list" class="list-group overflow-auto" style="height:350px;">
            {{#each highscore }}
            <li data-id="{{this.id}}" class="list-group-item">
              <strong>Name: </strong>{{this.name}}
              <strong>Score: </strong>{{this.score}}
            </li>
            {{/each}}
          </ul>
        </div>
        <h3><a href="/api/highscores">High Score API</a></h3>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>