<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1><img src="/assets/images/gritto.png"></h1>
        <h2><a href="/phaser"><img src="/assets/images/playgame.png"></a></h2>
        <h3>Current Leaderboard:</h3>
        <ul id="high-score-list" class="list-group">
          {{#each highscore }}
          <li data-id="{{this.id}}" class="list-group-item">
            <strong>Name: </strong>{{this.name}} 
            <strong>Score: </strong>{{this.score}}
          </li>
          {{/each}}
        </ul>
        <h3><a href="/api/highscores">View All High Scores</a></h3>
      </div>
    </div>
  </div>
</div>
 
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
